	<build>
		<finalName>scnuweb</finalName>
		<pluginManagement>
			<plugins>
				<!-- <plugin> <groupId>org.apache.tomcat.maven</groupId> <artifactId>tomcat7-maven-plugin</artifactId> 
					<version>2.0-SNAPSHOT</version> <configuration> <url>http://localhost:8080/manager/text</url> 
